<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Patrons</title>
  </head>
  <body>
    @foreach(var patron in Model)
    {
      <h4><a href='/patrons/@patron.GetId()'>@patron.GetPatronName()</a></h4>
    }

    <form class="form-group" action="/patrons" method="post">
      <label for="patron-name">Enter Patron's Name:</label>
      <input type="text" name="patron-name" required>
      <label for="patron-email">Enter Patron's Email:</label>
      <input type="email" name="patron-email">
      <label for="patron-number">Enter Patron's phone number:</label>
      <input type="number" name="patron-number">
      <button class="btn" type="submit" name="button">Submit</button>
    </form>
    <a href="/">Return Home</a> |
    <a href="/books">Books</a>
  </body>
</html>
